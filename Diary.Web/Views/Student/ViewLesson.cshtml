@model string[,]
@{
    ViewData["Title"] = "Lessons";
    int n = 1;
}
<div class="row">
    <div class="col-md-4">
        <table class="table table-striped">
            <thead>
                <tr>
                    <td>№</td>
                    <td>Понедельник</td>
                    <td>Вторник</td>
                    <td>Среда</td>
                    <td>Четверг</td>
                    <td>Пятница</td>
                    <td>Суббота</td>
                </tr>
            </thead>
            <tbody>
                @for (int j = 0; j <= 6; j++)
                {
                    <tr>
                        <td><p>@n</p></td>
                        @for (int i = 0; i <= 5; i++)
                        {
                            <td><p>@Model[i, j]</p></td>
                        }
                        @{n++;}
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>