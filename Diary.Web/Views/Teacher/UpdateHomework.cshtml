@model Diary.Web.ViewModels.HomeworkViewModel
@{
    ViewData["Title"] = "AddHomework";
}
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Title"></label><br />
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassName"></label><br />
                <p>@Model.ClassName</p>
            </div>
            <div class="form-group">
                <label asp-for="SubjectName"></label><br />
                <p>@Model.SubjectName</p>
            </div>
            <div class="form-group">
                <input asp-for="Files" class="form-control" type="file" name="Files" id="Files" size="5242880" accept=".xls,.xlsx,.csv,.CSV,.png,.jpeg,.jpg,.gif,.doc,.docx,.pdf,.PDF,.txt" multiple />
            </div>
            <div class="form-group">
                <label asp-for="TaskText"></label><br />
                <textarea asp-for="TaskText" rows="5" cols="90"></textarea>
                <span asp-validation-for="TaskText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date"></label><br />
                <input asp-for="Date" type="date" id="date" name="date" value=@Model.Date.ToString("yyyy-MM-dd") class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
                <label asp-for="Time"></label><br />
                <input asp-for="Time" type="time" id="time" name="time" class="form-control" value="@Model.TimeString"/>
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Сохранить</button>
        </form>
    </div>
</div>